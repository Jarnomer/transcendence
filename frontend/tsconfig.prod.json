{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Production optimizations */
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,

    /* Ensure maximum compatibility */
    "target": "ES2020",

    /* More specific frontend production settings */
    "importHelpers": true,
    "noEmitHelpers": true,

    /* More strict checks for production */
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "exclude": ["**/node_modules", "**/*.test.tsx", "**/*.test.ts", "**/tests/**/*"]
}
