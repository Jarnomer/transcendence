{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Production optimizations */
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,

    /* Ensure maximum compatibility */
    "target": "ES2020",
    "module": "NodeNext",

    /* More strict checks for production */
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "alwaysStrict": false
  },
  "exclude": ["**/node_modules", "**/*.test.ts", "**/tests/**/*"]
}
