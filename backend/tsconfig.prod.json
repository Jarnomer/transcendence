{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    /* Production optimizations */
    "removeComments": true,
    "sourceMap": false,
    "declaration": false,

    /* Ensure maximum compatibility */
    "target": "ES2020",
    "module": "NodeNext",

    /* More strict checks for production */
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Preserve output structure for better module resolution */
    "preserveSymlinks": true,
    "rootDir": "."
  },
  "exclude": ["**/node_modules", "**/*.test.ts", "**/tests/**/*"]
}
