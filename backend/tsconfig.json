{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Backend-specific options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Output options */
    "outDir": "dist",
    "rootDir": ".",

    /* Backend path aliases */
    "baseUrl": "./",
    "paths": {
      "@my-backend/*": ["services/*/src"],
      "@shared/*": ["../shared/*"]
    },
    "preserveSymlinks": true
  },
  "include": ["services/**/*", "../shared/**/*"]
}
