{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Backend-specific options */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Output options */
    "outDir": "dist",

    /* Backend path aliases */
    "baseUrl": ".",
    "paths": {
      "@my-backend/*": ["services/*/src"],
      "@shared": ["../shared"],
      "@shared/*": ["../shared/*"],
      "@utils": ["../shared/utils"],
      "@utils/*": ["../shared/utils/*"],
      "@types": ["../shared/types"],
      "@types/*": ["../shared/types/*"],
      "@messages": ["../shared/messages"],
      "@messages/*": ["../shared/messages/*"],
    }
  },
  "include": ["services/**/*", "../shared/**/*"]
}
