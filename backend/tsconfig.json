{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@my-backend/*": ["services/*/src"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["services/**/*", "../shared/**/*"]
}
